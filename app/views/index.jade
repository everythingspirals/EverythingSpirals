doctype html
html(ng-app="etsApp")
	head
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:800italic,400' rel='stylesheet' type='text/css')
		link(href='/css/main.css' rel='stylesheet' type='text/css')
		link(href='/components/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet' type='text/css')
		link(href="/modules/blog/client/blog.css" rel='stylesheet' type='text/css')

body
	//Navbar
	nav(id="navbar" class="visible-sm visible-md")
		img(class="logo" alt="Brand" src="/img/portfolio.jpg" class="img img-circle")
		ul
			li
				a(href="#/portfolio ") Portfolio
			li
				a(href="#/blog") Blog

	//Sidebar
	nav(id="sidebar" class="hidden-sm hidden-md")
		img(class="logo" src="/img/portfolio.jpg" class="img img-circle") 
		ul
			li
				a(href="#/portfolio") Portfolio
			li
				a(href="#/blog") Blog


	//Content
	div(id="content" class="container-fluid" ui-view)

	script(src="/components/angular/angular.min.js")
	script(src="/components/angular-ui-router/release/angular-ui-router.min.js")
	script(src="/client.js")
	script(src="/modules/portfolio/client/portfolio-controller.js")
	script(src="/modules/blog/client/blog-controller.js")

