div(id="sidebar") 
	case path
		when undefined
			img(id="profile" src="/img/profile.jpg" class="img img-circle") 
		when "/posts"
			img(id="profile" src="/img/blog.jpg" class="img img-circle") 
		when "/experiments"
			img(id="profile" src="/img/experiments.jpg" class="img img-circle") 
	ul
		//li
			a(href="/posts") Blog
		li
			a(href="/") Portfolio
		//li
			a(href="/experiments") Experiments
		
