div(id="sidebar") 
	case path
		when undefined
			img(id="profile" src="/img/profile.jpg" class="img img-circle") 
		when "/posts"
			img(id="profile" src="/img/blog.jpg" class="img img-circle") 
		when "/experiments"
			img(id="profile" src="/img/experiments.jpg" class="img img-circle") 
	//
		canvas(id="logo")
		script(type='text/javascript').
			var c = document.getElementById('logo');
			var context = c.getContext("2d");
			var width = context.canvas.width;
			var height = context.canvas.height;
			var centerx = width / 2;
			var centery = height / 2;
			var a = 1; var b = 1;
			context.clearRect(0, 0, width, height);
			context.moveTo(centerx, centery);
			context.beginPath();
			for (i = 0; i < 720; i++) {
				angle = 0.1 * i;
			    x = centerx + (a + b * angle) * Math.cos(angle);
			    y = centery + (a + b * angle) * Math.sin(angle);
			    context.lineTo(x, y);
			}
			context.strokeStyle = "#fff";
			context.stroke();
	ul
		li
			a(href="/posts") Blog
		li
			a(href="/") Portfolio
		li
			a(href="/experiments") Experiments
		
